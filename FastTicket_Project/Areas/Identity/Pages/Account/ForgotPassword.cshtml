@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<body style="background-color: #2E2E2E">
    <div class="card container-fluid box" style="width: 700px; border-radius: 20px;">
        <div class="card-body">
            <h1>@ViewData["Title"]</h1>
            <h2>Enter your email...</h2>
            <hr />
            <form id="forgotForm" asp-route-returnUrl="" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control bg-warning" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-end">
                    <button id="forgotSubmit" type="submit" class="btn btn-dark text-warning w-25 p2">Reset Password</button>
                </div>
            </form>

