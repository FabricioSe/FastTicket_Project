@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<body style="background-color: #2E2E2E">
    <div class="card container-fluid" style="width: 700px; border-radius: 20px;">
        <div class="card-body">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <p>
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.RecoveryCode" class="form-control bg-warning" autocomplete="off" placeholder="RecoveryCode" />
                            <label asp-for="Input.RecoveryCode" class="form-label"></label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex justify-content-end">
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}