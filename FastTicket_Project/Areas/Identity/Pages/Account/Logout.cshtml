@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<body style="background-color: #2E2E2E">
    <div class="card container-fluid box" style="width: 700px; border-radius: 20px;">
        <div class="card-body">
            <h1>@ViewData["Title"]</h1>
            <hr/>
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-warning">Click here to Logout</button>
                    </form>
                }
                else
                {
                        <h3 class="text-center">You have successfully logged out of the application.</h3>
                }
              }
        </div>
    </div>
</body>

