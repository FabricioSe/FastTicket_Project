
@{
    ViewData["Title"] = "Seller SignUp";
}
<body style="background-color: #2E2E2E ">
    <div class="card container-fluid" style="width:700px;">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <a href="../Buyer/SignUp" class="btn btn-outline-warning text-secondary btn-lg d-grid">Buyer</a>
                </div>
                <div class="form-group col-md-6">
                    <a href="../Seller/SignUp" class="btn btn-warning btn-lg d-grid">Seller</a>
                </div>
            </div>
            <br />
            <h1 class="display-7">Sign Up</h1>
            <form method="post">
                <div class="mb-3 mt-3">
                    <label class="form-label">Email Address</label>
                    <input class="form-control bg-warning" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control bg-warning" name="pswd">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="form-label">First Name</label>
                        <input class="form-control bg-warning" name="firstName" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Last Name</label>
                        <input class="form-control bg-warning" name="lastName" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label class="form-label">User Type</label>
                        <input class="form-control bg-warning" placeholder="Seller" disabled />
                    </div>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark btn-lg text-warning w-25 mt-4 mt-4">Sign Up</button>
                </div>
                <p>Already have a Fast Ticket Seller's Account? <a href="../Seller/Index" class="text-warning">Sign In</a></p>
            </form>
        </div>
    </div>
</body>
