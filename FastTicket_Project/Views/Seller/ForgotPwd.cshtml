@{
    ViewData["Title"] = "Seller Forgot Password";
}
<body style="background-color: #2E2E2E">
    <div class="card container-fluid" style="width:700px;">
        <div class="card-body">
            <br />
            <h1 class="text-warning">Forgot Password</h1>
            <form method="post">
                <div class="mb-3 mt-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control bg-warning" id="email" name="email">
                </div>
                <div>
                    <div class="form-group d-flex justify-content-end">
                        <button type="submit" class="btn btn-dark btn-lg text-warning w-25 mb-4 mt-4 me-4">Submit</button>
                        <a href="../Seller/Index" class="btn btn-outline-danger btn-lg w-25 mb-4 mt-4">Cancel</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
